{
    "app-id" : "io.github.diegoivanme.quizmaker",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "quizmaker",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
    		{
    			"name": "libpanel",
    			"builddir": false,
					"buildsystem": "meson",
					"sources": [
						{
							"type": "git",
							"commit": "aef5c4dfc84c1338ee9a8c47543f8c167a61bc43",
							"url": "https://gitlab.gnome.org/chergert/libpanel.git"
						}
					]
    		},
        {
            "name" : "quizmaker",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "."
                }
            ]
        }
    ]
}
